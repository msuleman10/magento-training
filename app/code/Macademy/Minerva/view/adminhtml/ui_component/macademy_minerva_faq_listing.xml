<?xml version="1.0" encoding="UTF-8"?>

<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                macademy_minerva_faq_listing.macademy_minerva_faq_listing_data_source
            </item>
        </item>
    </argument>
    <settings>
        <deps>
            <dep>macademy_minerva_faq_listing.macademy_minerva_faq_listing_data_source</dep>
        </deps>
        <spinner>macademy_minerva_faq_column</spinner>
    </settings>
    <dataSource name="macademy_minerva_faq_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Macademy_Minerva::faq</aclResource>
        <dataProvider name="macademy_minerva_faq_listing_data_source"
                      class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <columns name="macademy_minerva_faq_column">
        <settings>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">
                        macademy_minerva_faq_listing.macademy_minerva_faq_listing.macademy_minerva_faq_column.actions
                    </item>
                    <item name="target" xsi:type="string">applyAction</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">edit</item>
                        <item name="1" xsi:type="string">${$.$data.rowIndex}</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <column name="id">
            <settings>
                <label translate="true">ID</label>
            </settings>
        </column>
        <column name="question">
            <settings>
                <label translate="true">Question</label>
            </settings>
        </column>
        <column name="answer">
            <settings>
                <label translate="true">Answer</label>
            </settings>
        </column>
        <column name="is_published" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <label translate="true">Published</label>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <dataType>select</dataType>
            </settings>
        </column>
        <column name="created_at" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <label translate="true">Created At</label>
            </settings>
        </column>
        <column name="updated_at" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <label translate="true">Updated At</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Macademy\Minerva\Ui\Component\Listing\Column\Actions"/>
    </columns>
</listing>
