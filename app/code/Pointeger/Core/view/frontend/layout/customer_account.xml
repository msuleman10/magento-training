<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-custom">
                <arguments>
                    <argument name="path" xsi:type="string">core/comment/list</argument>
                    <argument name="label" xsi:type="string">Comments</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-custom2">
                <arguments>
                    <argument name="path" xsi:type="string">core/comment/form</argument>
                    <argument name="label" xsi:type="string">Add New Comments</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
