<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="GET" url="/V1/comment/:entity_id">
        <service class="Pointeger\Core\Api\CommentRepositoryInterface" method="getByEntityId"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="POST" url="/V1/add/comment">
        <service class="Pointeger\Core\Api\CommentRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="DELETE" url="/V1/delete/comment/:entity_id">
        <service class="Pointeger\Core\Api\CommentRepositoryInterface" method="deleteByEntityId"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
