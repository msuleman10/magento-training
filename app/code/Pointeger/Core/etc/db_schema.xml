<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="customer_comment" resource="default" engine="innodb" comment="Customer Comments">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="false"
                comment="Customer Id"/>
        <column xsi:type="varchar" name="name" nullable="false" length="100" comment="Name"/>
        <column xsi:type="varchar" name="comment" nullable="true" comment="Comment"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
</schema>
