<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="customer_comments" resource="default" engine="innodb" comment="Customer Comments">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="false"
                comment="Customer Id"/>
        <column xsi:type="varchar" name="name" nullable="false" length="100" comment="Name"/>
        <column xsi:type="text" name="comment" nullable="false" comment="Comment"/>
        <column name="is_published" xsi:type="boolean" nullable="false" default="false" comment="Is published"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <index referenceId="CUSTOMER_COMMENTS_COMMENT" indexType="fulltext">
            <column name="comment"/>
        </index>
    </table>
</schema>
