<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/hello.svg</argument>
                <argument name="logo_width" xsi:type="string">100</argument>
                <argument name="logo_height" xsi:type="string">80</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="report.bugs" display="false"/>
        <referenceContainer name="footer">
            <container name="phone-number-box" htmlTag="div" htmlId="phoneNumberContainer" before="copyright">
                <block name="phone.number" template="Juno_Theme::phone-number.phtml" ifconfig="general/store_information/phone">
                    <arguments>
                        <argument name="phone-number" xsi:type="object">Juno\Theme\ViewModel\PhoneNumberAndStoreHours</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
